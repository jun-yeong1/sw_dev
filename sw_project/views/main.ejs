            display: flex;
            align-items: center;
            flex-wrap: wrap;
            gap: 1.5rem;
        }

        .about .row .image {
            flex: 1 1 42rem;
        }

        .about .row .image img {
            width: 100%;
            animation: aboutImage 4s linear infinite;
        }

        @keyframes aboutImage {

            0%,
            100% {
                transform: scale(.9);
                border-radius: var(--border-radius-hover);
            }

            50% {
                transform: scale(.8);
                border-radius: var(--border-radius);
            }
        }

        .about .row .content {
            flex: 1 1 42rem;
        }

        .about .row .content .title {
            color: var(--main-color);
            font-size: 3rem;
            line-height: 1.8;
        }

        .about .row .content p {
