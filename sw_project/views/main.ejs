            font-size: 1.5rem;
            line-height: 1.8;
            padding: 1rem 0;
        }

        .about .row .content .icons-container {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            padding-top: 3rem;
        }

        .about .row .content .icons-container .icons {
            flex: 1 1 15rem;
            padding: 1.5rem;
            text-align: center;
            border: var(--border);
            border-radius: var(--border-radius);
        }

