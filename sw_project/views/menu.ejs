        }
        .card-header {
            font-weight: bold;
            font-size: 1.2em;
        }
        .table {
            width: 100%;
            border-collapse: collapse;
        }
        .table th, .table td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: center;
        }
        .btn {
            padding: 4px 8px;
            cursor: pointer;
        }
        .btn-danger {
